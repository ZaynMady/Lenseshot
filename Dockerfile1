FROM jenkins/jenkins:2.504.2-jdk21
USER root
RUN apt-get update && apt-get install -y \
    wget build-essential zlib1g-dev libncurses5-dev libgdbm-dev \
    libnss3-dev libssl-dev libreadline-dev libffi-dev curl libbz2-dev && apt-get install -y lsb-release
RUN curl -O https://www.python.org/ftp/python/3.13.5/Python-3.13.5.tgz && \
    tar -xf Python-3.13.5.tgz && \
    cd Python-3.13.5 && \
    ./configure --enable-optimizations && \
    make -j$(nproc) && \
    make altinstall
RUN rm -rf Python-3.13.5 Python-3.13.5.tgz
RUN curl -fsSLo /usr/share/keyrings/docker-archive-keyring.asc \
  https://download.docker.com/linux/debian/gpg
RUN echo "deb [arch=$(dpkg --print-architecture) \
  signed-by=/usr/share/keyrings/docker-archive-keyring.asc] \
  https://download.docker.com/linux/debian \
  $(lsb_release -cs) stable" > /etc/apt/sources.list.d/docker.list
RUN apt-get update && apt-get install -y docker-ce-cli
USER jenkins
RUN jenkins-plugin-cli --plugins "blueocean docker-workflow json-path-api"