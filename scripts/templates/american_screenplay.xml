<?xml version="1.0" encoding="UTF-8"?>

<template id="american_screenplay" version="1.0">
  <style>
    .american-screenplay {
      font-family: 'Courier New', Courier, monospace;
      font-size: 12pt;
      margin: 0 auto;
      width: 600px;
    }
    .scene-heading {
      font-weight: bold;
      text-transform: uppercase;
      margin-top: 20px;
    }
    .action {
      margin-top: 10px;
    }
    .character {
      font-weight: bold;
      margin-top: 10px;
      text-transform: uppercase;
      text-align: center;
    }
    .dialogue {
      margin-left: 40px;
      margin-top: 5px;
      text-align: center;
    }
  </style>

  <components>
    <sceneHeading class="scene-heading">
      <slot name="scene-heading" />
    </sceneHeading>
    <actionBlock class="action">
      <slot name="action" />
    </actionBlock>
    <characterName class="character">
      <slot name="character" />
    </characterName>
    <dialogueBlock class="dialogue">
      <slot name="dialogue" />
    </dialogueBlock>
  </components>

  <content>
    <!-- Populated dynamically -->
  </content>

  <smartType>
    <characters>
      <!-- Populated at runtime -->
    </characters>
    <locations>
      <!-- Could be used for suggestion dropdowns -->
    </locations>
    <scenes>
      <scene>INT</scene>
      <scene>EXT</scene>
      <scene>INT/EXT</scene>
    </scenes>
    <times>
      <time>DAY</time>
      <time>NIGHT</time>
      <time>EVENING</time>
      <time>LATER</time>
      <time>MIDNIGHT</time>
    </times>
  </smartType>
</template>
