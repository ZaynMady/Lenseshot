<?xml version="1.0" encoding="UTF-8"?>

<template id="american_screenplay" version="1.0">
  <style>
    .page {
      font-family: 'Courier New', Courier, monospace;
      font-size: 12pt;
      margin: 0 auto;
      width: 794px;
      background-color: white;
      direction: ltr;
    }
    .scene-heading {
      font-weight: bold;
      text-transform: uppercase;
      margin-top: 24px;
      margin-bottom: 12px;
    }

    .action {
      margin-top: 20px;
      text-align: left;
    }

    .character {
      margin-top: 20px;
      text-transform: uppercase;
      width: 30%;
      margin-left: 240px;
      text-align: center;
      font-weight: bold;
    }

    .dialogue {
      width: 50%;
      margin: 0 auto;
      text-align: center;
    }

    .shot {
      margin-top: 20px;
      text-transform: uppercase;
      font-weight: bold;
      }

    .transition {
      margin-top: 20px;
      text-transform: uppercase;
      font-weight: bold;
      text-align: right;
    }
    </style>




  <components>
    <sceneHeading class="scene-heading"/>
    <actionBlock class="action"/>
    <characterName class="character"/>
    <dialogueBlock class="dialogue"/>
    <TransitionBlock class="transition"/>
    <ShotBlock class="shot"/>
  </components>


  <content>
    
  </content>

  <smartType>
    <characters component="characterName">
      <!-- Populated at runtime -->
    </characters>
    <locations component="sceneHeading">
      <!-- Could be used for suggestion dropdowns -->
    </locations>
    <scenes component="sceneHeading">
      <scene>INT</scene>
      <scene>EXT</scene>
      <scene>INT/EXT</scene>
    </scenes>
    <times component="sceneHeading">
      <time>DAY</time>
      <time>NIGHT</time>
      <time>EVENING</time>
      <time>LATER</time>
      <time>MIDNIGHT</time>
    </times>
  </smartType>
</template>
